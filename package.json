{
  "name": "lingui-ts",
  "version": "1.0.0",
  "description": "Minimal configuration to build typescript + webpack + lingui",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack",
    "lingui-extract": "lingui extract",
    "lingui-compile": "lingui compile"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RandomEngy/lingui-ts.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/RandomEngy/lingui-ts/issues"
  },
  "lingui": {
    "compileNamespace": "ts",
    "locales": [
        "en",
        "pt-br"
    ],
    "sourceLocale": "en",
    "extractors": ["typescript"],
    "catalogs": [
        {
            "path": "<rootDir>/locale/{locale}/messages",
            "include": [
                "<rootDir>"
            ],
            "exclude": [
                "**/node_modules/**",
                "/*.js"
            ]
        }
    ]
  },
  "homepage": "https://github.com/RandomEngy/lingui-ts#readme",
  "devDependencies": {
    "@lingui/cli": "^3.13.2",
    "@lingui/macro": "^3.13.2",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.5",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2"
  }
}
